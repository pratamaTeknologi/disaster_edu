<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edu_angintopan"
    android:background="@color/mainangintopan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="359dp"
            android:background="@drawable/angintopan"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angin Topan"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_bold"
                android:textSize="25sp"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hurricane"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_mediumitalic"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"

                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apa itu angin topan ?"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/mainangintopan"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tsunami adalah salah satu bencana alam paling mematikan dan menghancurkan di dunia. Kata tsunami berasal dari bahasa Jepang yang artinya gelombang pelabuhan (tsu berarti 'pelabuhan,' dan nami berarti 'gelombang'). Tsunami terjadi ketika suatu kejadian alam, seperti gempa bumi bawah laut, letusan gunung berapi, longsor bawah laut, atau tubrukan benda angkasa dengan laut, memicu pergerakan besar air yang menghasilkan gelombang laut yang sangat besar."
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/mainangintopan"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"

                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proses terjadinya longsor ?"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/mainGLB"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tsunami adalah salah satu bencana alam paling mematikan dan menghancurkan di dunia. Kata tsunami berasal dari bahasa Jepang yang artinya gelombang pelabuhan (tsu berarti 'pelabuhan,' dan nami berarti 'gelombang'). Tsunami terjadi ketika suatu kejadian alam, seperti gempa bumi bawah laut, letusan gunung berapi, longsor bawah laut, atau tubrukan benda angkasa dengan laut, memicu pergerakan besar air yang menghasilkan gelombang laut yang sangat besar."
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/mainGLB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"

                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dampak longsor"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/mainGLB"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tsunami adalah salah satu bencana alam paling mematikan dan menghancurkan di dunia. Kata tsunami berasal dari bahasa Jepang yang artinya gelombang pelabuhan (tsu berarti 'pelabuhan,' dan nami berarti 'gelombang'). Tsunami terjadi ketika suatu kejadian alam, seperti gempa bumi bawah laut, letusan gunung berapi, longsor bawah laut, atau tubrukan benda angkasa dengan laut, memicu pergerakan besar air yang menghasilkan gelombang laut yang sangat besar."
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/mainGLB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"

                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Langkah perlindungan longsor"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/mainGLB"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tsunami adalah salah satu bencana alam paling mematikan dan menghancurkan di dunia. Kata tsunami berasal dari bahasa Jepang yang artinya gelombang pelabuhan (tsu berarti 'pelabuhan,' dan nami berarti 'gelombang'). Tsunami terjadi ketika suatu kejadian alam, seperti gempa bumi bawah laut, letusan gunung berapi, longsor bawah laut, atau tubrukan benda angkasa dengan laut, memicu pergerakan besar air yang menghasilkan gelombang laut yang sangat besar."
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/mainGLB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beberapa kasus peristiwa tsunami"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/mainGLB"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tsunami adalah salah satu bencana alam paling mematikan dan menghancurkan di dunia. Kata tsunami berasal dari bahasa Jepang yang artinya gelombang pelabuhan (tsu berarti 'pelabuhan,' dan nami berarti 'gelombang'). Tsunami terjadi ketika suatu kejadian alam, seperti gempa bumi bawah laut, letusan gunung berapi, longsor bawah laut, atau tubrukan benda angkasa dengan laut, memicu pergerakan besar air yang menghasilkan gelombang laut yang sangat besar."
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/mainGLB"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>